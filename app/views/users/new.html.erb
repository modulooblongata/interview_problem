<h1>New User</h1>
<p>Please fill out the form below. All fields are required.</p>

    	<p><%= form_for(@user) do |f| %>
      <%= f.label :first_name %>
      <%= f.text_field :first_name %></p>

      <p><%= f.label :last_name %>
      <%= f.text_field :last_name %></p>

      <p><%= f.label :email %>
      <%= f.email_field :email %></p>

      <p><%= f.label :social_security_number %>
      <%= f.password_field :social_security_number %></p>

      <%= f.submit "Create user!" %>
    <% end %>